<h1>Cargos</h1>
  <table class="table table-sm mt-4">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Departamento</th>
        <th>Nível</th>
        <th>Salário Base</th>
        <th>Status</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @cargos.each do |cargo| %>
        <tr>
          <td><%= cargo.nome %></td>
          <td><%= cargo.departamento.nome %></td>
          <td><%= cargo.nivel.humanize %></td>
          <td><%= number_to_currency(cargo.salario_base) %></td>
          <td><%= cargo.status.humanize %></td>
          <td>
            <%= link_to 'Editar', edit_cargo_path(cargo), class: "btn btn-secondary btn-sm" %>
            <%= link_to 'Excluir', cargo, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Novo Cargo', new_cargo_path, class: "btn btn-primary" %>