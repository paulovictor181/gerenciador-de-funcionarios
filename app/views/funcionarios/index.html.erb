<h1>Funcionários</h1>
<table class="table table-sm mt-4">
  <thead>
    <tr>
      <th>Nome Completo</th>
      <th>Gênero</th>
      <th>Cargo</th>
      <th>Data de Contratação</th>
      <th>Salário</th>
      <th>Status</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
        <td><%= funcionario.nome_completo %></td>
        <td><%= funcionario.genero.humanize%></td> 
        <td><%= funcionario.cargo.nome %></td>
        <td><%= funcionario.data_contratacao.strftime("%d/%m/%Y") %></td>
        <td><%= number_to_currency(funcionario.salario) %></td>
        <td><%= funcionario.status.humanize %></td>
        <td>
          <%= link_to 'Editar', edit_funcionario_path(funcionario), class: "btn btn-secondary btn-sm" %>
          <%= link_to 'Excluir', funcionario, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Novo Funcionário', new_funcionario_path, class: "btn btn-primary" %>
